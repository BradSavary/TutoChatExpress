generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        Int      @id @default(autoincrement())
  pseudo    String
  content   String
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  pseudo    String   @unique
  password  String
  email     String   @unique
  isActive  Boolean  @default(true)
}